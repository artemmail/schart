@page "{Id}"
@using StockChart.Model;
@model EditModel
<script src="/scripts/tinymce/tinymce.min.js"></script>
<script src="/scripts/tinymcecfg.js"></script>
<div class="widerightsidebar">
    <div class="blogblock">
        <p>

        </p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <h2>Название темы</h2>

            <div class="form-group">
                @Html.EditorFor(model => model.Header, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <h2>Содержание темы</h2>
            <div class="form-group">
                @Html.TextAreaFor(model => model.Text, new { htmlAttributes = new {@style="height:600px;", @class = " form-control" } })
            </div>

            <div style="padding-top:10px">
                <input type="submit" value="Опубликовать" class="k-button" />
            </div>
        }
    </div>
</div>

